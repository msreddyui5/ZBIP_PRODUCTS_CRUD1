<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" 
	xmlns:unf="sap.ui.unified" xmlns:footerbar="sap.ushell.ui.footerbar" controllerName="bip.controller.Product">

	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="Product Maintenance"
							 busy="{productView>/busy}" busyIndicatorDelay="{productView>/delay}">

		<semantic:content>
			
 		</semantic:content>
		<semantic:customFooterContent>
			<Button id="delete" text="Delete" enabled="true" press="handleDelete" />
			<Button id="edit" text="Edit" enabled="true" press="handleEditPress" />
			<Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
			<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
		</semantic:customFooterContent>
		
  </semantic:FullscreenPage>

</mvc:View>